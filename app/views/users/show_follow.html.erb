<% provide(:title, @title) %>
<div class="row">
  <div class="col-lg-4">
    <%= link_to "View my profile", user_path(current_user), class: 'btn btn-primary margin-left'%>
    <%= render 'user_info' %>
    
  </div>
  <div class="col-lg-8">
    <h3><%= @title %></h3>
    <% if @users.any? %>
      <ul class="users">
        <% @users.each do |user|%>
          <li>
            <%= avatar user, size: 52 %>
            <%= link_to user.full_name, user_path(user) %>
          </li>
        <% end %>
      </ul>
      <%# will_paginate %>
    <% end %>
  </div>
</div>