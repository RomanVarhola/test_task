<div class="well">
  <h4>Leave a Comment:</h4>
    <%= form_for [@article, @article.comments.new] do |f| %>
      <div class="form-group">
        <%= f.text_area :description, class: 'form-control' %>
      </div>

    <div class="actions">
      <%= f.submit class: 'btn btn-primary' %>
    </div>
  <% end %>
</div>
